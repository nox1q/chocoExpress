<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="restaurant"
            type="kz.chocoexpress.app.data.models.home.Restaurant" />

        <variable
            name="recyclerViewItemClickCallback"
            type="kz.chocoexpress.app.ui_common.callbacks.RecyclerViewItemClickCallback" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_16"
        android:onClick="@{() -> recyclerViewItemClickCallback.onRecyclerViewItemClick(restaurant)}">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_restaurant_poster"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            app:cardCornerRadius="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                bindIconUrl="@{restaurant.photoUrl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@{restaurant.name}"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_restaurant_poster"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Del Papa" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@{restaurant.address}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/tv_restaurant_name"
            app:layout_constraintStart_toStartOf="@+id/tv_restaurant_name"
            app:layout_constraintTop_toBottomOf="@id/tv_restaurant_name"
            tools:text="ул. Бухар жырау, 66, уг. ул. Ауэзова" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>